{
  "manifest_version": 3,
  "name": "Jeenius",
  "version": "1.0",
  "description": "Adds an 'Jeenius' button to view more information about the post.",
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title": "Jeenius"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/logo.svg",
        "assets/popup.css",
        "assets/lightning.svg",
        "assets/whatsapp.svg",
        "assets/user.svg",
        "assets/close.svg",
        "assets/refresh.svg",
        "assets/copy.svg"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
  ]
}
